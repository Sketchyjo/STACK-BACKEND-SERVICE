{
  "info": {
    "name": "STACK - Due Integration Complete Flow",
    "description": "Complete user flow from registration to USDC deposits with auto off-ramping to USD",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "access_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "user_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "due_account_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "sol_wallet_address",
      "value": "",
      "type": "string"
    },
    {
      "key": "deposit_address",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "1. User Registration",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 200 || pm.response.code === 201) {",
              "    var jsonData = pm.response.json();",
              "    pm.collectionVariables.set('user_id', jsonData.user_id);",
              "    pm.test('User registered successfully', function() {",
              "        pm.expect(jsonData.user_id).to.exist;",
              "    });",
              "}"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"taylor{{$timestamp}}@example.com\",\n  \"password\": \"SecurePass123!\",\n  \"full_name\": \"Taylor Johnson\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/v1/auth/register",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "auth", "register"]
        }
      }
    },
    {
      "name": "2. User Login",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 200) {",
              "    var jsonData = pm.response.json();",
              "    pm.collectionVariables.set('access_token', jsonData.access_token);",
              "    pm.test('Login successful', function() {",
              "        pm.expect(jsonData.access_token).to.exist;",
              "    });",
              "}"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"taylor{{$timestamp}}@example.com\",\n  \"password\": \"SecurePass123!\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/v1/auth/login",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "auth", "login"]
        }
      }
    },
    {
      "name": "3. Create Passcode",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{access_token}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"passcode\": \"123456\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/v1/auth/passcode/create",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "auth", "passcode", "create"]
        }
      }
    },
    {
      "name": "4. Verify Passcode",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{access_token}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"passcode\": \"123456\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/v1/auth/passcode/verify",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "auth", "passcode", "verify"]
        }
      }
    },
    {
      "name": "5. Provision Wallets",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{access_token}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"chains\": [\"SOL-DEVNET\", \"MATIC-AMOY\"]\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/v1/wallets/provision",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "wallets", "provision"]
        }
      }
    },
    {
      "name": "6. Check Wallet Status",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 200) {",
              "    var jsonData = pm.response.json();",
              "    if (jsonData.walletsByChain && jsonData.walletsByChain['SOL-DEVNET']) {",
              "        pm.collectionVariables.set('sol_wallet_address', jsonData.walletsByChain['SOL-DEVNET'].address);",
              "    }",
              "}"
            ]
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{access_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/v1/wallets/status",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "wallets", "status"]
        }
      }
    },
    {
      "name": "7. Complete Onboarding",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{access_token}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"date_of_birth\": \"1995-06-15\",\n  \"phone_number\": \"+1234567890\",\n  \"address\": {\n    \"street\": \"123 Main St\",\n    \"city\": \"New York\",\n    \"state\": \"NY\",\n    \"postal_code\": \"10001\",\n    \"country\": \"US\"\n  }\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/v1/onboarding/complete",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "onboarding", "complete"]
        }
      }
    },
    {
      "name": "8. Create Due Account",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 200) {",
              "    var jsonData = pm.response.json();",
              "    pm.collectionVariables.set('due_account_id', jsonData.due_account_id);",
              "}"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{access_token}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Taylor Johnson\",\n  \"email\": \"taylor@example.com\",\n  \"country\": \"US\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/v1/due/account",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "due", "account"]
        }
      }
    },
    {
      "name": "9. Get KYC Link",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{access_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/v1/due/kyc-link?due_account_id={{due_account_id}}",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "due", "kyc-link"],
          "query": [
            {
              "key": "due_account_id",
              "value": "{{due_account_id}}"
            }
          ]
        }
      }
    },
    {
      "name": "10. Link Solana Wallet",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{access_token}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"wallet_address\": \"{{sol_wallet_address}}\",\n  \"chain\": \"SOL-DEVNET\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/v1/due/link-wallet",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "due", "link-wallet"]
        }
      }
    },
    {
      "name": "11. Create Virtual Account",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 200) {",
              "    var jsonData = pm.response.json();",
              "    pm.collectionVariables.set('deposit_address', jsonData.deposit_address);",
              "}"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{access_token}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"account_number\": \"123456789\",\n  \"routing_number\": \"021000021\",\n  \"account_name\": \"Taylor Johnson\",\n  \"chain\": \"SOL-DEVNET\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/v1/due/virtual-account",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "due", "virtual-account"]
        }
      }
    },
    {
      "name": "12. Get Portfolio Balance",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{access_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/v1/portfolio/balance",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "portfolio", "balance"]
        }
      }
    }
  ]
}
