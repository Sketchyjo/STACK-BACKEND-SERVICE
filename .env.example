# ZeroG Compute
ZEROG_COMPUTE_BROKER_ENDPOINT=https://broker-testnet.0g.ai
ZEROG_COMPUTE_PRIVATE_KEY=CHANGE_ME_generate_new_private_key
ZEROG_COMPUTE_PROVIDER_ID=default

# Blockchain RPC Endpoints
ETH_RPC_URL=https://eth-mainnet.alchemyapi.io/v2/YOUR-API-KEY
