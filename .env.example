# Environment
ENVIRONMENT=development
LOG_LEVEL=debug

# Server
SERVER_PORT=8080
SERVER_HOST=0.0.0.0

# Database
DATABASE_URL=postgres://postgres:postgres@localhost:5432/stack_service?sslmode=disable
DB_HOST=localhost
DB_PORT=5432
DB_NAME=stack_service
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSLMODE=disable

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT
JWT_SECRET=CHANGE_ME_generate_random_secret
JWT_ACCESS_TOKEN_TTL=604800
JWT_REFRESH_TOKEN_TTL=2592000

# Security
ENCRYPTION_KEY=CHANGE_ME_32_byte_encryption_key

# Circle API
CIRCLE_API_KEY=CHANGE_ME_get_from_circle_dashboard
CIRCLE_ENVIRONMENT=testnet
CIRCLE_BASE_URL=https://api.circle.com/

# KYC (Sumsub)
KYC_PROVIDER=sumsub
KYC_API_KEY=CHANGE_ME_get_from_sumsub
KYC_API_SECRET=CHANGE_ME_get_from_sumsub
KYC_BASE_URL=https://api.sumsub.com

# Email (Resend)
EMAIL_PROVIDER=resend
EMAIL_API_KEY=CHANGE_ME_get_from_resend
EMAIL_FROM_EMAIL=no-reply@stackservice.com
EMAIL_FROM_NAME=Stacks

# SMS (Twilio)
SMS_PROVIDER=twilio
SMS_API_KEY=CHANGE_ME_get_from_twilio
SMS_API_SECRET=CHANGE_ME_get_from_twilio
SMS_FROM_NUMBER=+1234567890

# ZeroG Storage
ZEROG_STORAGE_RPC_ENDPOINT=https://evmrpc-testnet.0g.ai/
ZEROG_STORAGE_INDEXER_RPC=https://indexer-storage-testnet-turbo.0g.ai
