# Stack Service Environment Variables
# Copy this file to .env and update the values

# Application Environment
ENVIRONMENT=development
LOG_LEVEL=debug

# Server Configuration
PORT=8080
HOST=0.0.0.0

# Database Configuration
DATABASE_URL=postgres://postgres:postgres@localhost:5432/stack_service_dev?sslmode=disable
DB_HOST=localhost
DB_PORT=5432
DB_NAME=stack_service_dev
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSL_MODE=disable

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_TOKEN_TTL=3600
JWT_REFRESH_TOKEN_TTL=2592000
JWT_ISSUER=stack_service

# Security Configuration
ENCRYPTION_KEY=your-32-byte-encryption-key-here!!
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900
REQUIRE_MFA=false
PASSWORD_MIN_LENGTH=8

# Blockchain Configuration
# Ethereum Mainnet
ETH_RPC_URL=https://eth-mainnet.alchemyapi.io/v2/YOUR-API-KEY
ETH_WEBSOCKET_URL=wss://eth-mainnet.alchemyapi.io/v2/YOUR-API-KEY

# Polygon Mainnet
POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR-API-KEY
POLYGON_WEBSOCKET_URL=wss://polygon-mainnet.g.alchemy.com/v2/YOUR-API-KEY

# Binance Smart Chain
BSC_RPC_URL=https://bsc-dataseed1.binance.org/
BSC_WEBSOCKET_URL=wss://bsc-ws-node.nariox.org:443

# Payment Processing
PAYMENT_PROCESSOR_API_KEY=your-payment-processor-api-key
PAYMENT_WEBHOOK_SECRET=your-webhook-secret

# Card Processing (Stripe example)
STRIPE_API_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_ENVIRONMENT=test

# External APIs
COINGECKO_API_KEY=your-coingecko-api-key
COINMARKETCAP_API_KEY=your-coinmarketcap-api-key

# Email Configuration (Resend)
EMAIL_PROVIDER=resend
RESEND_API_KEY=your-resend-api-key
RESEND_FROM_EMAIL=noreply@stackservice.com
RESEND_FROM_NAME=Stacks
EMAIL_REPLY_TO=support@stackservice.com
EMAIL_BASE_URL=http://localhost:3000
BASE_URL=http://localhost:3000

# KYC Provider (Sumsub)
KYC_PROVIDER=sumsub
SUMSUB_APP_TOKEN=your-sumsub-app-token
SUMSUB_SECRET_KEY=your-sumsub-secret-key
SUMSUB_LEVEL_NAME=individual-basic-kyc
KYC_BASE_URL=https://api.sumsub.com
KYC_CALLBACK_URL=http://localhost:8080/api/v1/kyc/callback

# Monitoring & Analytics
PROMETHEUS_ENABLED=true
GRAFANA_ADMIN_PASSWORD=admin

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
BURST_LIMIT=200

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_PATH=./uploads

# Cache Configuration
CACHE_TTL=3600
CACHE_CLEANUP_INTERVAL=1800

# Notification Configuration
PUSH_NOTIFICATIONS_ENABLED=true
EMAIL_NOTIFICATIONS_ENABLED=true
SMS_NOTIFICATIONS_ENABLED=false

# Twilio (for SMS)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Development Tools
ENABLE_SWAGGER=true
ENABLE_DEBUG_ROUTES=true
ENABLE_PROFILER=true

# Testing Configuration
TEST_DATABASE_URL=postgres://postgres:postgres@localhost:5432/stack_service_test?sslmode=disable
TEST_REDIS_HOST=localhost
TEST_REDIS_PORT=6379

