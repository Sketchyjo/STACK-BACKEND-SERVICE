# Test Environment Configuration
# This file contains environment variables for running tests
# Copy to .env.test and modify as needed for your local environment

# Database Configuration
TEST_DB_HOST=localhost
TEST_DB_PORT=5432
TEST_DB_NAME=stack_test
TEST_DB_USER=test_user
TEST_DB_PASSWORD=test_pass
TEST_DB_SSL_MODE=disable
TEST_DB_URL=postgres://test_user:test_pass@localhost:5432/stack_test?sslmode=disable

# Redis Configuration (if needed for integration tests)
TEST_REDIS_URL=redis://localhost:6379/1

# JWT Configuration
TEST_JWT_SECRET=test-jwt-secret-for-testing-only-do-not-use-in-production
TEST_JWT_EXPIRY=7d

# Webhook Configuration
TEST_WEBHOOK_SECRET=test-webhook-secret-for-testing-only
TEST_WEBHOOK_TIMEOUT=30s

# Circle API Configuration (for mocking)
TEST_CIRCLE_API_KEY=test-circle-api-key
TEST_CIRCLE_BASE_URL=https://api.circle.com
TEST_CIRCLE_TIMEOUT=30s

# Logging Configuration
LOG_LEVEL=warn
GIN_MODE=test

# Test Configuration
TEST_TIMEOUT=5m
TEST_PARALLEL=4
TEST_COVERAGE_THRESHOLD=70

# Performance Test Settings
LOAD_TEST_CONCURRENCY=10
LOAD_TEST_REQUESTS=1000
LOAD_TEST_DURATION=30s

# Integration Test Settings
INTEGRATION_TEST_BASE_URL=http://localhost:8080
INTEGRATION_TEST_API_VERSION=v1

# Feature Flags for Tests
ENABLE_WEBHOOK_SIGNATURE_VALIDATION=true
ENABLE_RATE_LIMITING=false
ENABLE_CORS=true
ENABLE_REQUEST_LOGGING=false

# Mock Configuration
MOCK_CIRCLE_API=true
MOCK_DATABASE_DELAYS=false
MOCK_NETWORK_ERRORS=false

# Cleanup Configuration
CLEANUP_TEST_DATA=true
PRESERVE_TEST_ARTIFACTS=false