# Security Environment Variables
# Copy this file to .env and fill in actual values
# NEVER commit .env to version control

# JWT Configuration
JWT_SECRET=<generate-strong-random-secret-min-32-chars>
JWT_ACCESS_TTL=3600
JWT_REFRESH_TTL=2592000

# Encryption
ENCRYPTION_KEY=<generate-32-byte-hex-key>
AES_KEY=<generate-32-byte-hex-key>

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/stack_service
DATABASE_PASSWORD=<strong-database-password>

# External Services
CIRCLE_API_KEY=<circle-api-key>
CIRCLE_ENTITY_SECRET=<circle-entity-secret>

ZEROG_STORAGE_ACCESS_KEY=<zerog-storage-key>
ZEROG_STORAGE_SECRET_KEY=<zerog-storage-secret>
ZEROG_COMPUTE_API_KEY=<zerog-compute-key>

ALPACA_API_KEY=<alpaca-api-key>
ALPACA_SECRET_KEY=<alpaca-secret-key>

DUE_API_KEY=<due-api-key>
DUE_SECRET_KEY=<due-secret-key>

SENDGRID_API_KEY=<sendgrid-api-key>

# KYC Provider
KYC_API_KEY=<kyc-provider-api-key>
KYC_SECRET_KEY=<kyc-provider-secret>
KYC_WEBHOOK_SECRET=<kyc-webhook-secret>

# Redis
REDIS_PASSWORD=<redis-password>

# Admin
ADMIN_API_KEY=<admin-api-key>

# CSRF
CSRF_SECRET=<csrf-secret-key>

# Session
SESSION_SECRET=<session-secret-key>

# Webhook Secrets
WEBHOOK_SECRET_CIRCLE=<circle-webhook-secret>
WEBHOOK_SECRET_DUE=<due-webhook-secret>
WEBHOOK_SECRET_ALPACA=<alpaca-webhook-secret>

# Generate keys using:
# openssl rand -hex 32
# or
# python3 -c "import secrets; print(secrets.token_hex(32))"
